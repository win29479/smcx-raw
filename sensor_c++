#include <DHT.h>

// -------------------- DHT11 --------------------
#define DHTPIN 2        // ขาที่ต่อ DHT11
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);

// -------------------- Gas Sensor --------------------
#define GAS_PIN A0      // ขา Analog ของ Gas Sensor

void setup() {
  Serial.begin(9600);
  dht.begin();
  Serial.println("DHT11 + Gas Sensor Start...");
}

void loop() {
  // อ่านค่า DHT11
  float h = dht.readHumidity();
  float t = dht.readTemperature(); // องศา C

  // อ่านค่า Gas Sensor
  int gasValue = analogRead(GAS_PIN);

  // เช็คค่า DHT ว่าอ่านได้ไหม
  if (isnan(h) || isnan(t)) {
    Serial.println("อ่านค่า DHT11 ไม่ได้!");
  } else {
    Serial.print("Humidity: ");
    Serial.print(h);
    Serial.print(" %\t");

    Serial.print("Temperature: ");
    Serial.print(t);
    Serial.println(" *C");
  }

  Serial.print("Gas Sensor Value: ");
  Serial.println(gasValue);

  delay(1000); // หน่วงเวลา 1 วิ
}
